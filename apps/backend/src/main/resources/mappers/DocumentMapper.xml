<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solsol.heycalendar.mapper.DocumentMapper">

	<!-- Document 결과 매핑 -->
	<resultMap id="documentResultMap" type="com.solsol.heycalendar.domain.Document">
		<id property="documentNm" column="document_nm"/>
		<result property="scholarshipNm" column="scholarship_nm"/>
		<result property="name" column="name"/>
		<result property="description" column="description"/>
	</resultMap>

	<!-- 특정 장학금의 제출서류 목록 조회 -->
	<select id="findByScholarshipNm" parameterType="long" resultMap="documentResultMap">
		SELECT document_nm, scholarship_nm, name, description
		FROM document
		WHERE scholarship_nm = #{scholarshipNm}
		ORDER BY document_nm
	</select>

	<!-- ID로 제출서류 조회 -->
	<select id="findById" parameterType="long" resultMap="documentResultMap">
		SELECT document_nm, scholarship_nm, name, description
		FROM document
		WHERE document_nm = #{documentNm}
	</select>

	<!-- 제출서류 생성 -->
	<insert id="insert" parameterType="com.solsol.heycalendar.domain.Document" 
	        useGeneratedKeys="true" keyProperty="documentNm" keyColumn="document_nm">
		INSERT INTO document (scholarship_nm, name, description)
		VALUES (#{scholarshipNm}, #{name}, #{description})
	</insert>

	<!-- 제출서류 수정 -->
	<update id="update" parameterType="com.solsol.heycalendar.domain.Document">
		UPDATE document 
		SET name = #{name},
		    description = #{description}
		WHERE document_nm = #{documentNm}
	</update>

	<!-- 제출서류 삭제 -->
	<delete id="delete" parameterType="long">
		DELETE FROM document 
		WHERE document_nm = #{documentNm}
	</delete>

	<!-- 특정 장학금의 모든 제출서류 삭제 -->
	<delete id="deleteByScholarshipNm" parameterType="long">
		DELETE FROM document 
		WHERE scholarship_nm = #{scholarshipNm}
	</delete>

</mapper>